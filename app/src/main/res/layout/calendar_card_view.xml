<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp"

    tools:showIn="@layout/fragment_first">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_bg"
        android:orientation="horizontal">

        <View
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:background="@color/colorOrange"></View>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp">

        <com.wolfsoft.teammeetingschedule.TextView_Lato
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Data analysing with team"
            android:textColor="@color/colorGray"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/orange_circle"></View>

            <com.wolfsoft.teammeetingschedule.TextView_Lato

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="PENDING"
                android:textColor="@color/colorOrange"
                android:textSize="12dp"
                android:textStyle="bold"
                android:id="@+id/event_status" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_name"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <com.wolfsoft.teammeetingschedule.Textview_lato_thin
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Today : 7:40 pm"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:textStyle="bold"
                android:id="@+id/event_date" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="7dp"
                android:src="@drawable/placeholder" />

            <com.wolfsoft.teammeetingschedule.Textview_lato_thin
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Google HQ"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:textStyle="bold"
                android:id="@+id/event_location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.wolfsoft.teammeetingschedule.TextView_Lato
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/roun_rect_lightgray"
                android:gravity="center"
                android:text="review"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.wolfsoft.teammeetingschedule.TextView_Lato
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roun_rect_lightgray"
                android:gravity="center"
                android:text="workflow"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.wolfsoft.teammeetingschedule.TextView_Lato
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roun_rect_lightgray"
                android:gravity="center"
                android:text="team build"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="bold" />

            <com.wolfsoft.teammeetingschedule.TextView_Lato
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/roun_rect_lightgray"
                android:gravity="center"
                android:text="data design"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>